@using VKM.Admin.Models.Database
@model IEnumerable<Team>
@{
    ViewData["Title"] = "Администраторская";
}
@Html.Partial("ModalDialogs")

<div class="row">
        <div class="col">
            <div>
                <div id="BaseTree">
                    <ul>
                        @foreach (var team in Model)
                        {
                            <li data-jstree='{ "type" : "team", "id": @team.Id }'>@team.Number взвод
                                <ul>
                                    @foreach (var student in team.Students)
                                    {
                                        <li data-jstree='{ "type" : "student", "id": @student.Id }'>@student.FullName</li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row w-75" style="visibility: collapse;" id="StudentContent">
            <div class="col-12">
                <h2 id="SelectedStudent"></h2>
            </div>
            <div class="col-4 h-100">
                <div class="container">
                    <div class="row">
                        <div class="col">Учебная группа:</div>
                        <div class="col" id="CurrentStudentGroup"></div>
                    </div>
                    <div class="row">
                        <div class="col">Взвод:</div>
                        <div class="col" id="CurrentStudentTeam"></div>
                    </div>
                    <div class="row">
                        <div class="col">Средний балл:</div>
                        <div class="col" id="CurrentStudentAverageValue"></div>
                    </div>
                </div>
            </div>
            <div class="col-8 h-100" style="overflow: auto; max-height: 598px">
                <table class="table table-sm table-light">
                    <thead>
                    <tr>
                        <th scope="col">Дата</th>
                        <th scope="col">Оценка</th>
                        <th scope="col">Алгоритм</th>
                    </tr>
                    </thead>
                    <tbody id="CurrentStudentHistory">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
