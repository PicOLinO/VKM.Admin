<div id="EditStudentDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Редактирование студента</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="m_LastName">Фамилия:</label>
                    <input type="text" class="form-control" id="m_LastName">
                </div>
                <div class="form-group">
                    <label for="m_FirstName">Имя:</label>
                    <input type="text" class="form-control" id="m_FirstName">
                </div>
                <div class="form-group">
                    <label for="m_MiddleName">Отчество:</label>
                    <input type="text" class="form-control" id="m_MiddleName">
                </div>
                <div class="form-group">
                    <label for="m_Group">Учебная группа:</label>
                    <input type="text" class="form-control" id="m_Group">
                </div>
                <div class="form-group">
                    <label for="m_Team">Взвод:</label>
                    <select class="form-control" id="m_Team"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="m_SaveButton">Сохранить</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            </div>
        </div>

    </div>
</div>
<div id="EditTeamDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Редактирование взвода</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="m_TeamNumber">Номер:</label>
                    <input type="number" class="form-control" id="m_TeamNumber">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="m_SaveTeamButton">Сохранить</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            </div>
        </div>

    </div>
</div>